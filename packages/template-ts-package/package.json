{
  "name": "@coat/template-ts-package",
  "version": "0.0.34",
  "author": "Peter Juras <me@peterjuras.com>",
  "devDependencies": {
    "@babel/cli": "7.16.0",
    "@babel/core": "7.16.0",
    "@babel/preset-env": "7.16.4",
    "@babel/preset-typescript": "7.16.0",
    "@coat/cli": "0.0.25",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "27.0.3",
    "@types/tmp": "0.2.2",
    "@typescript-eslint/eslint-plugin": "5.5.0",
    "@typescript-eslint/parser": "5.5.0",
    "eslint": "8.3.0",
    "eslint-config-prettier": "8.3.0",
    "fs-extra": "10.0.0",
    "jest": "27.4.3",
    "lint-staged": "12.1.2",
    "prettier": "2.5.0",
    "rimraf": "3.0.2",
    "tmp": "0.2.1",
    "typescript": "4.5.2"
  },
  "files": [
    "build/",
    "files/"
  ],
  "keywords": [
    "coat",
    "template",
    "coat-template",
    "typescript"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ]
  },
  "main": "build/index.js",
  "peerDependencies": {
    "@coat/cli": "^0.0.25"
  },
  "scripts": {
    "build": "coat run build:*",
    "build:babel": "babel src -d build --extensions \".ts\" --ignore \"**/*.test.ts\"",
    "build:typedefs": "tsc -p tsconfig.build.json",
    "coat": "coat",
    "lint": "coat run lint:*",
    "lint-staged": "lint-staged",
    "lint:eslint": "eslint --ext .ts --max-warnings 0 src",
    "lint:prettier": "prettier --check src",
    "lint:types": "tsc",
    "prebuild": "rimraf build",
    "prepack": "coat run build",
    "test": "jest",
    "watch-build": "coat run build:* --watch",
    "watch-build:babel": "npm run build:babel -- --watch",
    "watch-build:typedefs": "npm run build:typedefs -- --watch",
    "watch-lint:tsc": "npm run lint:types -- --watch"
  }
}
